class Solution {
    public boolean checkPerfectNumber(int num) {
        int i;
        int count=0;
        for(i=1;i<num;i++)
        {
            if(num%i==0)
            {
              count=count+i;
            }
        }
        if(num==count)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
}
